[Unit]
Description=FestiGo Server
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/FestiGo-Server
ExecStartPre=/home/ubuntu/FestiGo-Server/venv/bin/pip install -r /home/ubuntu/FestiGo-Server/requirements.txt
ExecStart=/home/ubuntu/FestiGo-Server/venv/bin/python /home/ubuntu/FestiGo-Server/main.py
ExecStartPost=/bin/bash /home/ubuntu/FestiGo-Server/crash-alert.sh
Restart=always
RestartSec=5
Environment="PYTHONUNBUFFERED=1"

[Install]
WantedBy=multi-user.target
